#!/bin/bash -xe
# This script is just a helper to setup a new container pair environment.
# Run it the first time you are in a new PairUp! container.

repo=${PAIRUP_REPO:-git@github.com:ouicode/rkingy-pairup.git}

(
    cd /app/.ssh
    mv known_hosts brb || true
    cat >> brb <<EOT
|1|+JO6TutzVy9x0IqYUQQB49L6rjI=|7OXvFzmF4kQZRC/2w8Uh47yi7EE= ssh-rsa 
|1|xTl4unVxXZLNqr/x3L4IIQyIsQc=|f5aU3ZAA8JvCajvy+6cYLzfh3z8= ssh-rsa 
EOT
    sort < brb | uniq > known_hosts
    rm brb
)

git clone $repo conf
pair setup
pair start
